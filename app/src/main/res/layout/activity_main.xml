<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <!-- Status Text -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready. Connect to server."
        android:textSize="16sp"
        android:paddingBottom="8dp" />

    <!-- Connection Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CONNECT" />

        <Button
            android:id="@+id/btnDisconnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DISCONNECT"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Tracking Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/btnStartTracking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="START TRACKING"
            android:visibility="gone"
            android:enabled="false"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnStopTracking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="STOP TRACKING"
            android:visibility="gone"
            android:enabled="false"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Single Shot Control -->
    <Button
        android:id="@+id/btnSendSingleImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND SINGLE IMAGE"
        android:visibility="gone"
        android:enabled="false"
        android:layout_marginBottom="16dp" />

    <!-- Image View -->
    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:background="#CCCCCC"
        android:contentDescription="Received image frame" />
</LinearLayout>